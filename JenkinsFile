pipeline {
    agent any
    parameters {
        string(name: 'USERNAME', defaultValue: 'DevOpsLearner', description: 'Enter your name')
        choice(name: 'ENV', choices: ['DEV', 'QA', 'PROD'], description: 'Select the environment')
        booleanParam(name: 'DEPLOY', defaultValue: true, description: 'Deploy after build?')
    }
    stages {
        stage('Info') {
            steps {
                echo "Hello, ${params.USERNAME}!"
                echo "Environment selected: ${params.ENV}"
                echo "Deploy after build: ${params.DEPLOY}"
            }
        }
    }
}

