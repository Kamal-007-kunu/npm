pipeline {
    agent any

    stages {
        stage('Parallel Build') {
            parallel {
                stage('Frontend') {
                    steps {
                        echo 'Building frontend...'
                        sh 'sleep 5'
                        echo 'Frontend build done.'
                    }
                }
                stage('Backend') {
                    steps {
                        echo 'Building backend...'
                        sh 'sleep 5'
                        echo 'Backend build done.'
                    }
                }
            }
        }
    }

    post {
        success { echo 'Parallel stages completed âœ…' }
    }
}
